// firestore.rules
// COPIA ESTAS REGLAS EN LA CONSOLA DE FIREBASE
// https://console.firebase.google.com/project/TU_PROYECTO/firestore/rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regla para la colección de usuarios
    match /users/{userId} {
      // Solo permite acceso si el usuario está autenticado
      // Y solo puede acceder a sus propios datos
      allow read, write: if request.auth != null 
                        && request.auth.uid == userId;
      
      // Subcolección dietario
      match /dietario/{document=**} {
        allow read, write: if request.auth != null 
                          && request.auth.uid == userId;
      }
    }
    
    // Denegar cualquier otro acceso
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
